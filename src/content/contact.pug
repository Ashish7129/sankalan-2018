- const email = 'sankalan@ducs.in'

mixin contact({ title, email, phone })
  .module
    .contact.vc
      if email
        a.button(href="mailto://" + email) #{email}
      if phone
        a.button(href="tel://" + phone.replace(/\s/g, '')) #{phone}
      em #{title}

.banner
  .banner-content
    h2.banner-title Contact Us
    //- p You can also contact for specific queries at links below
.content
  .section
    div.module
      p For general queries, feel free to reach us at our Facebook page:
      a.button(href="https://facebook.com/DUCS.Sankalan" style="text-shadow: none" target="_blank") fb.com/DUCS.Sankalan
    div.module
      p You can also send us an email at
      a.button(href="mailto://" + email, style="text-shadow: none") #{email}
  .section.bg-white.module
    div
      h3 We are located at:
      pre.
        Department of Computer Science,
        Faculty of Mathematical Sciences,
        New Academic Block,
        University of Delhi

    a.button(href="https://goo.gl/maps/YqMFB3uxy9m" target="_blank" style="margin-left: auto") Get Directions #[br] 28°41'17.2"N 77°12'25.7"E

